<%- include('../partials/header') %>

<br><br><h2>Add a Ticket</h2>
<form id="add-ticket-form" method="POST"
  action="/flights/<%= flight._id %>/tickets/new">
  <label>Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
  <label>Price: $</label>
    <input name="price">
  <input type="submit" value="Add Ticket">
</form>

